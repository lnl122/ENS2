<Window x:Class="ENS2.LogonEngineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ENS2"
        mc:Ignorable="d"
        Title="Logon to Engine" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="150" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0">Логин:</TextBlock>
        <TextBox Name="passwordBox" Grid.Row="0" Grid.Column="1" >Логин</TextBox>
        <TextBlock Grid.Row="1" Grid.Column="0">Пароль:</TextBlock>
        <TextBox Name="passwordBox2" Grid.Row="1" Grid.Column="1" >Пароль</TextBox>

        <WrapPanel Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" Margin="5,5,5,5">
            <Button IsDefault="True" MinWidth="60" Margin="5,5,5,5" Click="Click_OK">OK</Button>
            <Button IsCancel="True" MinWidth="60" Margin="5,5,5,5">Отмена</Button>
        </WrapPanel>
    </Grid>
</Window>
