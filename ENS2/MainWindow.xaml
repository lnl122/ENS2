<Window x:Class="ENS2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ENS2"
        mc:Ignorable="d"
        Title="ENS2" Height="450" Width="800">
    <Grid>
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem Header="ДВИЖОК" >
                <MenuItem Name="MenuItemId_Logon" Header="Выполнить вход..." IsEnabled="True" Click="MenuItem_Engine_Logon_Click"></MenuItem>
                <MenuItem Name="MenuItemId_Logoff" Header="Выйти из движка" IsEnabled="False" Click="MenuItem_Engine_Logoff_Click"></MenuItem>
                <Separator />
                <MenuItem Name="MenuItemId_GameConnect" Header="Подключиться к игре..." IsEnabled="False" Click="MenuItem_Engine_Connect_Click"></MenuItem>
                <MenuItem Name="MenuItemId_GameStats" Header="Смотреть статистику" IsEnabled="False" Click="MenuItem_Engine_Stats_Click"></MenuItem>
                <MenuItem Name="MenuItemId_GameDisconnect" Header="Отключиться от игры" IsEnabled="False" Click="MenuItem_Engine_Disconnect_Click"></MenuItem>
            </MenuItem>
            <MenuItem Header="ЗАДАНИЕ" IsEnabled="False" >
                <MenuItem Header="Создать новое" ></MenuItem>
                <MenuItem Header="Дублировать текущее" ></MenuItem>
            </MenuItem>
            <MenuItem Header="СЕРВЕР" IsEnabled="False" >
                <MenuItem Header="Подключиться к серверу..." ></MenuItem>
                <MenuItem Header="Отключиться от сервера" ></MenuItem>
                <Separator />
                <MenuItem Header="Создать сервер" ></MenuItem>
                <MenuItem Header="Остановить сервер" ></MenuItem>
            </MenuItem>
            <MenuItem Header="НАСТРОЙКИ" IsEnabled="False" >
                <MenuItem Header="Настройки..." ></MenuItem>
            </MenuItem>
            <MenuItem Header="СПРАВКА" IsEnabled="False" >
                <MenuItem Header="О программе" ></MenuItem>
                <Separator />
                <MenuItem Header="Онлайн-справка" IsEnabled="False" />
            </MenuItem>            
        </Menu>
    </Grid>
</Window>
